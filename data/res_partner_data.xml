<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--PARTNER CATEGORY-->
    <record id="res_partner_category_teacher" model="res.partner.category">
        <field name="name">Teacher</field>
        <field name="color" eval="1"/>
    </record>
    <record id="res_partner_category_student" model="res.partner.category">
        <field name="name">Student</field>
        <field name="color" eval="2"/>
    </record>
    <record id="res_partner_category_teacher_ec" model="res.partner.category">
        <field name="name">Emergency Contact</field>
        <field name="parent_id" ref="res_partner_category_teacher"/>
        <field name="color" eval="3"/>
    </record>
    <record id="res_partner_category_student_ec" model="res.partner.category">
        <field name="name">Emergency Contact</field>
        <field name="parent_id" ref="res_partner_category_student"/>
        <field name="color" eval="4"/>
    </record>
    <record id="res_partner_category_guardian" model="res.partner.category">
        <field name="name">Guardian</field>
        <field name="color" eval="8"/>
    </record>
</odoo>