<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_school_teacher_list" model="ir.ui.view">
        <field name="name">school.teacher.list</field>
        <field name="model">school.teacher</field>
        <field name="arch" type="xml">
            <list string="Teacher" sample="1">
                <field name="name"/>
                <field name="subject"/>
                <field name="phone"/>
            </list>
        </field>
    </record>

    <record id="view_school_teacher_form" model="ir.ui.view">
        <field name="name">school.teacher.form</field>
        <field name="model">school.teacher</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form string="Teacher">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="subject"/>
                        <field name="phone"/>
                    </group>
                    <group string="Handled Classes">
                        <field name="class_ids">
                            <list>
                                <field name="name"/>
                            </list>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_school_teacher" model="ir.actions.act_window">
        <field name="name">Teachers</field>
        <field name="res_model">school.teacher</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_school_teachers" name="Teachers" parent="menu_school_root"/>
    <menuitem id="menu_school_teacher_action" name="All Teachers" parent="menu_school_teachers" action="action_school_teacher"/>
</odoo>
